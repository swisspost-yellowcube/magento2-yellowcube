<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="yc_process_queue">
            <schedule>
                <cron_expr>0 * * * *</cron_expr>
                <!-- @todo replace to 0 * * * * for each hour after test phase -->
            </schedule>
            <run>
                <model>swisspost_yellowcube/queue_processor::process</model>
            </run>
        </job>
        <job name="yc_war">
            <schedule>
                <cron_expr>30 1 * * *</cron_expr>
                <!-- @todo replace with 30 1 * * * -->
            </schedule>
            <run>
                <model>swisspost_yellowcube/observer::handleWar</model>
            </run>
        </job>
        <job name="yc_inventory_sync">
            <schedule>
                <cron_expr>30 1 * * *</cron_expr>
                <!-- @todo replace with 30 1 * * * -->
            </schedule>
            <run>
                <model>swisspost_yellowcube/observer::handleInventory</model>
            </run>
        </job>
    </group>
</config>
